<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--公共的标题-->
    <declare-styleable name="HeaderView">
        <attr name="titleLeftText" format="string" />
        <attr name="titleLeftImg" format="reference" />
        <attr name="titleName" format="string" />
        <attr name="titleGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="titleRightText" format="string" />
        <attr name="titleRightImg" format="reference" />
        <attr name="titleAlpha" format="integer" />
    </declare-styleable>

    <!--自定义SeekBar-->
    <declare-styleable name="SeekBar_Issue">
        <attr name="textsize" format="dimension" />
        <attr name="textcolor" format="color" />
        <attr name="img" format="reference" />
    </declare-styleable>

    <!--带描边的TextView-->
    <declare-styleable name="TextWithBorders">
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>

    <!--自定义MLImageView的属性-->
    <declare-styleable name="MLImageView">
        <attr name="press_alpha" format="integer" />
        <attr name="press_color" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="mlborder_width" format="dimension" />
        <attr name="mlborder_color" format="color" />
        <attr name="shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>

</resources>