<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/gapsize_d">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/gapsize_d"
        android:paddingTop="@dimen/gapsize_d">

        <!--头像-->
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30px"
            android:scaleType="fitXY"
            android:src="@mipmap/def_square_round"
            app:layout_auto_basewidth="height|margin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <!--单曲名称-->
            <TextView
                android:id="@+id/tv_music_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gapsize_d"
                android:textColor="@color/white"
                android:textSize="@dimen/typesize_d"
                tools:text="热情的沙漠" />

            <TextView
                android:id="@+id/singer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_music_name"
                android:textColor="@color/white"
                android:textSize="@dimen/typesize_e"
                tools:text="歌手名称" />

            <TextView
                android:id="@+id/common_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_music_name"
                android:layout_marginStart="@dimen/gapsize_b"
                android:layout_toEndOf="@id/singer_name"
                android:drawablePadding="@dimen/gapsize_f"
                android:drawableStart="@mipmap/works_listenin"
                android:textColor="@color/white"
                android:textSize="@dimen/typesize_e"
                tools:text="30" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33818081" />

</LinearLayout>