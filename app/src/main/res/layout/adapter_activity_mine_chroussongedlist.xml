<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/gapsize_d">
        <!--歌手头像、昵称-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_mine_mychrous_songpic"
                android:layout_width="@dimen/mine_mychrous_item_pic_w_h"
                android:layout_height="@dimen/mine_mychrous_item_pic_w_h"
                android:scaleType="centerCrop"
                android:src="@mipmap/def_avatar_round"
                app:layout_auto_baseheight="width" />

            <TextView
                android:id="@+id/item_mine_mychrous_songname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gapsize_d"
                android:text="孤独终老"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/typesize_d" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_mine_mychroussongs_canyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gapsize_d"
            android:padding="@dimen/gapsize_f"
            android:text="@string/mine_mychroussongs_item_canyu"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/typesize_d" />
    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/gapsize_h"
        android:background="@color/whitesmoke" />
</LinearLayout>