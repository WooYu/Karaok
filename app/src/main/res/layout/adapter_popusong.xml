<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingEnd="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/discover_item_bgimg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/def_square_large" />

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="orionooooooo"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/typesize_c" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_line_popularsong" />

        <TextView
            android:id="@+id/tv_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="满山遍野的红玫瑰"
            android:textColor="@color/text_dark" />

        <ImageView
            android:id="@+id/imagview_itunes"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_margin="2dp"
            android:scaleType="fitXY"
            android:src="@mipmap/discover_itunes" />

    </LinearLayout>
</LinearLayout>