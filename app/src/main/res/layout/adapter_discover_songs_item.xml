<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360px"
    android:layout_height="684px"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingEnd="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/titlebar_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/gapsize_d">

        <ImageView
            android:id="@+id/discover_item_bgimg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/def_square_large" />

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gapsize_d"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="orionooooooo"
            android:textColor="@color/white"
            android:textSize="@dimen/typesize_c" />

        <TextView
            android:id="@+id/tv_singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gapsize_d"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="满山遍野的红玫瑰"
            android:textColor="@color/white"
            android:textSize="@dimen/typesize_c" />

        <ImageView
            android:id="@+id/imagview_itunes"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/gapsize_d"
            android:scaleType="fitXY"
            android:src="@mipmap/discover_itunes" />

    </LinearLayout>


</LinearLayout>