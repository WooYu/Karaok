<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_msg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <!--标题-->
    <com.clicktech.snsktv.widget.titlebar.HeaderView
        android:id="@+id/headerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_title_msg"
        app:titleAlpha="0"
        app:titleGravity="center"
        app:titleLeftImg="@mipmap/arrow_left"
        app:titleName="@string/mine_mytracks_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_mine_mytracks_history_singed"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/inform_bg_dark"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/gapsize_d"
            android:paddingTop="@dimen/gapsize_b">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/track_accompany" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gapsize_d"
                android:text="@string/mine_mytracks_history_singed"
                android:textColor="@color/white"
                android:textSize="@dimen/typesize_d" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/ll_mine_mytracks_local_play"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/inform_bg_light"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/gapsize_d"
            android:paddingTop="@dimen/gapsize_b">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/track_localrecord" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gapsize_d"
                android:text="@string/mine_mytracks_local_play"
                android:textColor="@color/white"
                android:textSize="@dimen/typesize_d" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine_mytracks_my_chorusplay"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/inform_bg_dark"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/gapsize_d"
            android:paddingTop="@dimen/gapsize_b">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/track_chorus" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gapsize_d"
                android:text="@string/mine_mytracks_my_chorusplay"
                android:textColor="@color/white"
                android:textSize="@dimen/typesize_d" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/ll_mine_mytracks_listen_history"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/inform_bg_light"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/gapsize_d"
            android:paddingTop="@dimen/gapsize_b">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/track_play" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gapsize_d"
                android:text="@string/mine_mytracks_listen_history"
                android:textColor="@color/white"
                android:textSize="@dimen/typesize_d" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine_mytracks_my_collection"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/inform_bg_dark"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/gapsize_d"
            android:paddingTop="@dimen/gapsize_b">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/track_collect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gapsize_d"
                android:text="@string/mine_mytracks_my_collection"
                android:textColor="@color/white"
                android:textSize="@dimen/typesize_d" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>