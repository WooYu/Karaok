<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/item_singer_avater"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/def_square_round" />

    <TextView
        android:id="@+id/item_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/item_singer_avater"
        android:maxLines="1"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/typesize_c"
        tools:text="雨" />

    <TextView
        android:id="@+id/item_song_singername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_song_name"
        android:maxLines="1"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/typesize_c"
        tools:text="森高森高" />

    <TextView
        android:id="@+id/item_song_songsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_song_name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_singer_avater"
        android:textColor="@color/text_medium"
        android:textSize="@dimen/typesize_d"
        tools:text="3.46M" />

    <TextView
        android:id="@+id/tv_singerworks_go_to_k_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_bg_blue_roundedcorners"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="2dp"
        android:text="@string/ksong"
        android:textColor="@color/white"
        android:textSize="@dimen/typesize_c" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_singer_avater"
        android:background="@color/gainsboro" />

    <include layout="@layout/layout_line_1dp" />
</RelativeLayout>