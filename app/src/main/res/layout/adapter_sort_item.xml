<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_indexes"
        android:layout_width="fill_parent"
        android:layout_height="27dp"
        android:background="@color/cc_list_title_bk"
        android:drawableStart="@mipmap/item_original"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/text_dark"
        android:textSize="13sp"
        tools:text="A" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.clicktech.snsktv.widget.filetcircleimageview.MLImageView
            android:id="@+id/iv_photo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/def_avatar_round"
            app:mlborder_width="0dp"
            app:shape_type="round" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="王心灵" />
    </LinearLayout>

    <include layout="@layout/layout_line_1dp" />
</LinearLayout>