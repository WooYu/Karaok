<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_item_songlist"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/gapsize_h"
    android:paddingEnd="@dimen/gapsize_b"
    android:paddingStart="@dimen/gapsize_b"
    android:paddingTop="@dimen/gapsize_f">

    <TextView
        android:id="@+id/tv_ranking"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:background="@mipmap/ranking_10"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/typesize_b"
        tools:text="10" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginEnd="@dimen/gapsize_d"
        android:layout_marginStart="@dimen/gapsize_b"
        android:background="@mipmap/def_square_small"
        android:scaleType="centerCrop"
        app:layout_auto_basewidth="height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/typesize_d"
            tools:text="后来的我们" />

        <TextView
            android:id="@+id/tv_singername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gapsize_f"
            android:textColor="@color/white"
            android:textSize="@dimen/typesize_d"
            tools:text="王心灵" />

    </LinearLayout>

</LinearLayout>
