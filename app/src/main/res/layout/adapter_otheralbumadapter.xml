<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="262px"
    android:layout_marginBottom="7px"
    android:layout_marginTop="7px"
    android:background="@color/white"
    android:orientation="horizontal">

    <!--头像-->
    <ImageView
        android:id="@+id/iv_mine_album_pic"
        android:layout_width="262px"
        android:layout_height="262px"
        android:scaleType="fitXY"
        android:src="@mipmap/def_square" />

    <!--专辑名称、专辑说明、单曲-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginTop="60px"
        android:orientation="vertical">
        <!--专辑名称-->
        <TextView
            android:id="@+id/tv_mine_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单曲"
            android:textColor="#000000"
            android:textSize="38px" />

        <!--专辑说明-->
        <TextView
            android:id="@+id/tv_mine_album_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:text="专辑说明"
            android:textColor="#000000"
            android:textSize="31px" />


        <!--单曲、评论、礼物-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mine_album_songcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/format_singleofablum"
                android:textColor="#838383"
                android:textSize="31px" />

            <TextView
                android:id="@+id/tv_mine_album_commentcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/gapsize_f"
                android:text="@string/format_commentofalbum"
                android:textColor="#838383"
                android:textSize="31px" />

            <TextView
                android:id="@+id/tv_mine_album_giftcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/gapsize_f"
                android:text="@string/format_giftsofalbume"
                android:textColor="#838383"
                android:textSize="31px" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>